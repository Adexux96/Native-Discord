<Application
    x:Class="NativeDiscord.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NativeDiscord"
    xmlns:converters="using:NativeDiscord.Views">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
            
            <!-- Discord Theme Colors -->
            <SolidColorBrush x:Key="DiscordBackgroundPrimary" Color="#313338"/>  <!-- Chat Background -->
            <SolidColorBrush x:Key="DiscordBackgroundSecondary" Color="#2B2D31"/> <!-- Member List / Channel List -->
            <SolidColorBrush x:Key="DiscordBackgroundTertiary" Color="#1E1F22"/>  <!-- Sidebar -->
            <SolidColorBrush x:Key="DiscordBackgroundFloating" Color="#18191C"/>
            
            <SolidColorBrush x:Key="DiscordTextNormal" Color="#DBDEE1"/>
            <SolidColorBrush x:Key="DiscordTextMuted" Color="#949BA4"/>
            <SolidColorBrush x:Key="DiscordInteractiveNormal" Color="#B5BAC1"/>
            <SolidColorBrush x:Key="DiscordInteractiveHover" Color="#DCE0E5"/>
            <SolidColorBrush x:Key="DiscordInteractiveActive" Color="#FFFFFF"/>
            
            <SolidColorBrush x:Key="DiscordBrand" Color="#5865F2"/>
            
            <!-- Code Block Colors (Verified Discord Docs) -->
            <SolidColorBrush x:Key="DiscordCodeBackground" Color="#2C2D32"/>
            <SolidColorBrush x:Key="DiscordInlineCodeBackground" Color="#2E3035"/>
            <SolidColorBrush x:Key="DiscordCodeText" Color="#DBDEE1"/>
            <FontFamily x:Key="DiscordCodeFont">Consolas, Courier New, monospace</FontFamily>
            
            <Style TargetType="NavigationViewItem">
                <Setter Property="Foreground" Value="{StaticResource DiscordInteractiveNormal}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
