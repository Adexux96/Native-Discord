<Page
    x:Class="NativeDiscord.Views.ServerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NativeDiscord.Views"
    xmlns:models="using:NativeDiscord.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource DiscordBackgroundSecondary}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Column (Channels) -->
        <Grid Grid.Column="0" Background="{StaticResource DiscordBackgroundSecondary}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>    <!-- Channels -->
                <RowDefinition Height="Auto"/> <!-- User Footer -->
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" BorderBrush="#111111" BorderThickness="0,0,0,1" Padding="16,12" Height="48">
                 <TextBlock x:Name="ServerTitle" Text="Server Name" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="Bold" Foreground="{StaticResource DiscordTextNormal}"/>
            </Border>

            <!-- Channels List -->
            <ListView Grid.Row="1" x:Name="ChannelList" ItemsSource="{x:Bind ChannelItems}" Padding="0,12" SelectionMode="Single" SelectionChanged="ChannelList_SelectionChanged">
                <ListView.Resources>
                    <local:ChannelItemTemplateSelector x:Key="ChannelSelector"
                        ChannelTemplate="{StaticResource ChannelTemplate}"
                        CategoryTemplate="{StaticResource CategoryTemplate}"/>
                    
                    <DataTemplate x:Key="ChannelTemplate" x:DataType="local:ChannelViewItem">
                        <StackPanel Margin="0,1">
                                <Grid Padding="8,4" CornerRadius="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Icon and Name -->
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="6">
                                        <FontIcon Glyph="{x:Bind IconGlyph}" FontSize="18" Foreground="{ThemeResource TextFillColorTertiaryBrush}" VerticalAlignment="Center"/>
                                        <TextBlock Text="{x:Bind Channel.Name}" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center" Margin="6,0,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- User Limit / Count -->
                                    <Border Grid.Column="2" Background="#202225" CornerRadius="8" Padding="6,2" Visibility="{x:Bind UserLimitVisibility, Mode=OneWay}" VerticalAlignment="Center">
                                         <TextBlock Text="{x:Bind UserCountText, Mode=OneWay}" Foreground="{ThemeResource TextFillColorTertiaryBrush}" FontSize="11" FontWeight="SemiBold"/>
                                    </Border>
                                </Grid>
                            
                            <!-- Voice Users List (Only shows if there are users) -->
                            <ItemsControl ItemsSource="{x:Bind VoiceUsers}" Margin="28,2,0,4">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="local:VoiceUser">
                                        <Grid Margin="0,2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Avatar -->
                                            <Ellipse Width="24" Height="24">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{x:Bind AvatarUrl}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            
                                            <!-- Name & Icons -->
                                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" Margin="8,0,0,0">
                                                <TextBlock Text="{x:Bind Name}" Foreground="{StaticResource DiscordTextNormal}" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                                
                                                <!-- Status Icons -->
                                                <FontIcon Glyph="&#xF781;" FontSize="12" Foreground="#ED4245" Visibility="{x:Bind IsMuted, Converter={StaticResource BoolToVis}}" ToolTipService.ToolTip="Muted"/>
                                                <FontIcon Glyph="&#xE7F6;" FontSize="12" Foreground="#ED4245" Visibility="{x:Bind IsDeafened, Converter={StaticResource BoolToVis}}" ToolTipService.ToolTip="Deafened"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>

                    <DataTemplate x:Key="CategoryTemplate" x:DataType="local:ChannelViewItem">
                        <TextBlock Text="{x:Bind Name}" 
                                   Style="{StaticResource CaptionTextBlockStyle}" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                   FontWeight="Bold" 
                                   Margin="16,16,8,4"
                                   Opacity="0.8"/>
                    </DataTemplate>
                </ListView.Resources>
                
                <ListView.ItemTemplateSelector>
                    <StaticResource ResourceKey="ChannelSelector"/>
                </ListView.ItemTemplateSelector>
                
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,1"/>
                        <Setter Property="MinHeight" Value="32"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
            
            <ProgressRing x:Name="LoadingRing" Grid.Row="1" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- User Footer -->
            <Grid Grid.Row="2" Background="#232428" Padding="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Width="32" Height="32" Margin="0,0,8,0">
                    <Ellipse>
                        <Ellipse.Fill>
                            <ImageBrush x:Name="CurrentUserAvatar"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Ellipse Width="10" Height="10" Fill="#23A559" Stroke="#232428" StrokeThickness="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="-2,-2"/>
                </Grid>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="CurrentUserDisplayName" Text="User" Style="{StaticResource BodyStrongTextBlockStyle}" FontSize="13" Foreground="{StaticResource DiscordTextNormal}" TextTrimming="CharacterEllipsis"/>
                    <TextBlock x:Name="CurrentUserUsername" Text="#0000" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{StaticResource DiscordTextMuted}" FontSize="12" TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="0">
                     <!-- Mic -->
                     <Button Background="Transparent" BorderThickness="0" Padding="6" CornerRadius="4">
                        <FontIcon Glyph="&#xE720;" FontSize="16" Foreground="{StaticResource DiscordInteractiveNormal}"/>
                        <ToolTipService.ToolTip>Mute</ToolTipService.ToolTip>
                     </Button>
                     <!-- Deafen -->
                     <Button Background="Transparent" BorderThickness="0" Padding="6" CornerRadius="4">
                        <FontIcon Glyph="&#xE7F6;" FontSize="16" Foreground="{StaticResource DiscordInteractiveNormal}"/>
                        <ToolTipService.ToolTip>Deafen</ToolTipService.ToolTip>
                     </Button>
                     <!-- Settings -->
                     <Button Background="Transparent" BorderThickness="0" Padding="6" CornerRadius="4">
                        <FontIcon Glyph="&#xE713;" FontSize="16" Foreground="{StaticResource DiscordInteractiveNormal}"/>
                        <ToolTipService.ToolTip>User Settings</ToolTipService.ToolTip>
                     </Button>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Main Content: Chat -->
        <Frame x:Name="ChatFrame" Grid.Column="1" Background="{StaticResource DiscordBackgroundPrimary}"/>
    </Grid>
</Page>
