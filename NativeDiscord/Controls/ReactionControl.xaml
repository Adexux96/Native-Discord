<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="NativeDiscord.Controls.ReactionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NativeDiscord.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:NativeDiscord.Models"
    mc:Ignorable="d">

    <UserControl.Resources>
         <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#18191C"/>
            <Setter Property="Foreground" Value="#DCDDDE"/>
            <Setter Property="BorderBrush" Value="#00000000"/>
        </Style>
    </UserControl.Resources>

    <Grid CornerRadius="4" 
          Background="#2F3136"
          BorderThickness="1"
          BorderBrush="Transparent"
          Padding="6,2,6,2"
          Margin="0,0,4,4"
          PointerPressed="Grid_PointerPressed">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <!-- Emoji Image (Custom) -->
        <Image x:Name="EmojiImage" 
               Grid.Column="0" 
               Width="16" Height="16"
               Margin="0,0,4,0"
               VerticalAlignment="Center"
               Stretch="Uniform"
               Visibility="Collapsed"/>
        
        <!-- Emoji Text (Unicode) -->
        <TextBlock x:Name="EmojiText"
                   Grid.Column="0"
                   FontSize="14"
                   Margin="0,0,4,0"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"
                   FontFamily="Segoe UI Emoji"/>

        <!-- Count -->
        <TextBlock x:Name="CountText"
                   Grid.Column="1"
                   Text="1"
                   Foreground="#B9BBBE"
                   FontSize="12"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"/>
                   
    </Grid>
</UserControl>
